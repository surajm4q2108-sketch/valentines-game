  <button id="no">NO ðŸ’”</button>

  <script>
    const yesBtn = document.getElementById("yes");
    const noBtn = document.getElementById("no");

    function moveYes() {
      const x = Math.random() * (window.innerWidth - 120);
      const y = Math.random() * (window.innerHeight - 60);
      yesBtn.style.left = x + "px";
      yesBtn.style.top = y + "px";
    }

    // Initial positions
    moveYes();
    noBtn.style.left = "55%";
    noBtn.style.top = "60%";

    // YES runs away when hovered
    yesBtn.addEventListener("mouseenter", moveYes);

    // When YES is finally clicked
    yesBtn.addEventListener("click", () => {
      document.body.innerHTML = `
        <div class="container celebrate">
          ðŸ’– YAYYY! IT'S A DATE ðŸ’–<br><br>
          Happy Valentineâ€™s Day ðŸ˜˜
        </div>
      `;
    });
